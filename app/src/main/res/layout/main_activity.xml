<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:stackFromBottom="true"
    tools:context="com.bluebird.notifinda.MainActivity"
    android:background="@mipmap/bg" >
    	
    	
    	<!-- Scroll view for main content -->
    	<ScrollView 
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
    	<!-- Linear layout for main content -->
    	<LinearLayout
    	    
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		
    		android:orientation="vertical"
    	 	>
    
    	    <!-- Logo image -->
		    <ImageView
		        android:id="@+id/title_image"
		        android:src="@mipmap/logostuff"
		        		        
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"

				android:scaleType="fitEnd"
				android:adjustViewBounds="true"

		        />

			<TextView
				android:id="@+id/por"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

			<ImageView
				android:id="@+id/login_btn"
				android:src="@mipmap/loginbtn"

				android:layout_width="260dp"
				android:layout_height="wrap_content"

				android:scaleType="fitEnd"
				android:adjustViewBounds="true"

				android:layout_gravity="center"
				android:layout_marginTop="35dp"

				/>

			<ImageView
				android:id="@+id/register_btn"
				android:src="@mipmap/registerbtn"

				android:layout_width="260dp"
				android:layout_height="wrap_content"

				android:scaleType="fitEnd"
				android:adjustViewBounds="true"

				android:layout_gravity="center"
				android:layout_marginTop="5dp"

				/>

			<ImageView
				android:id="@+id/facebook_btn"
				android:src="@mipmap/facebookbtn"

				android:layout_width="260dp"
				android:layout_height="wrap_content"

				android:scaleType="fitEnd"
				android:adjustViewBounds="true"

				android:layout_gravity="center"
				android:layout_marginTop="5dp"

				/>


    
	</LinearLayout>
	<!-- END of main content layout -->
	</ScrollView>
	<!-- END of main content scroll view -->
	
	
</LinearLayout>


