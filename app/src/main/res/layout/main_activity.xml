<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:stackFromBottom="true"
    tools:context="com.bluebird.notifinda.MainActivity"
    android:background="@mipmap/bg"
	android:animateLayoutChanges="true">

	<!-- Scroll view for main content -->
	<ScrollView
		android:id="@+id/mainScroll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:animateLayoutChanges="true"
		>
    	<!-- Linear layout for main content -->

			<LinearLayout
				android:id="@+id/buttonLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"

				android:orientation="vertical"
				android:animateLayoutChanges="true"
				>

				<!-- Logo image -->
				<ImageView
					android:id="@+id/title_image"
					android:src="@mipmap/logostuff"

					android:layout_width="0dp"
					android:layout_height="0dp"

					android:scaleType="fitEnd"
					android:adjustViewBounds="true"

					android:layout_gravity="center"

					/>


				<ImageView
					android:id="@+id/login_btn"
					android:src="@mipmap/loginbtn"

					android:layout_width="260dp"
					android:layout_height="80dp"

					android:scaleType="fitEnd"
					android:adjustViewBounds="true"

					android:layout_gravity="center"
					android:layout_marginTop="35dp"

					android:visibility="invisible"
					/>

				<ImageView
					android:id="@+id/register_btn"
					android:src="@mipmap/registerbtn"

					android:layout_width="260dp"
					android:layout_height="wrap_content"

					android:scaleType="fitEnd"
					android:adjustViewBounds="true"

					android:layout_gravity="center"
					android:layout_marginTop="5dp"
					android:visibility="invisible"
					/>

				<ImageView
					android:id="@+id/facebook_btn"
					android:src="@mipmap/facebookbtn"

					android:layout_width="260dp"
					android:layout_height="wrap_content"

					android:scaleType="fitEnd"
					android:adjustViewBounds="true"

					android:layout_gravity="center"
					android:layout_marginTop="5dp"
					android:visibility="invisible"
					/>



			</LinearLayout>
	<!-- END of main content layout -->

	</ScrollView>
	<!-- END of main content scroll view -->
	
	
</RelativeLayout>


