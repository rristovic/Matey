<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:stackFromBottom="true"
    tools:context="com.bluebird.notifinda.MainActivity"
    android:background="@drawable/login_background" >
    	
    	
    	<!-- Scroll view for main content -->
    	<ScrollView 
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
    	<!-- Linear layout for main content -->
    	<LinearLayout 
    	    android:padding="@dimen/login_layout_padding"
    	    
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		
    		android:orientation="vertical"
    	 	>
    
    	    <!-- Logo image -->
		    <ImageView
		        android:id="@+id/title_image"
		        android:src="@drawable/notifinda_logo"
		        android:layout_margin="@dimen/layout_spacing"
		        		        
		        android:layout_width="70dp"
		        android:layout_height="70dp"
		        
		        android:layout_gravity="center"       
		        />
		    
		    <!-- App title with modified font -->
		    <TextView
		        android:id="@+id/app_title"
		        android:text="@string/app_title"
		        android:layout_margin="@dimen/layout_spacing"
		        android:textColor="@color/closeWhite"
		        
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
    
		        android:textSize="30dp"
		        android:textStyle="bold"
		        android:gravity="center"
		     	/>
		    
		    <!-- App quote -->
		    <TextView
		        android:id="@+id/title_quote"
		        android:text="@string/title_quote"
		        android:layout_margin="@dimen/layout_spacing"
		        android:textSize="@dimen/standard_text_size"
		        android:textColor="@color/closeWhite"
		        
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        
		        android:textStyle="italic|bold"
		        android:gravity="center"
		        android:lines="2"
		     	/>
		    
		    <!-- Email text label
		    <TextView
		        android:text="@string/login_email_text"
		        android:layout_marginStart="@dimen/layout_spacing_small"
		        android:layout_marginLeft="@dimen/layout_spacing_small"
		        android:textColor="@color/closeWhite"
		        
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        
		        android:layout_marginTop="15dp"
		     	/> -->
		    
		    <LinearLayout   	    
    	    	android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    		
    			android:orientation="horizontal"
    			android:layout_marginTop="15dp"
    			>
    			
			    <ImageView
			        android:id="@+id/email_icon"
			        android:src="@drawable/email_icon"
			        android:layout_margin="@dimen/layout_spacing_small"
			        		        
			        android:layout_width="28dp"
			        android:layout_height="28dp"
			        
			        android:layout_gravity="center"   
			        />
			    
			    <!-- Email text input -->
			    <EditText
			        android:id="@+id/login_email"
			        android:background="@drawable/login_text_field"
			        android:layout_margin="@dimen/layout_spacing_small"
			        
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/input_type_height"
			        
			        android:ems="10"        
			        android:inputType="textEmailAddress"       
			        android:paddingLeft="10dp"
			        android:paddingRight="10dp" >
		
				    <!-- <requestFocus /> -->
				</EditText>
			
			</LinearLayout>
	
		    <!-- Password text label 
		    <TextView
		        android:text="@string/login_password_text"
		        android:layout_marginStart="@dimen/layout_spacing_small"
		        android:layout_marginLeft="@dimen/layout_spacing_small"
		        android:textColor="@color/closeWhite"
		        
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		     	/>-->
		     	
		    <LinearLayout   	    
    	    	android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    		
    			android:orientation="horizontal"
    			>	
		     
			    <ImageView
			        android:id="@+id/password_icon"
			        android:src="@drawable/password_icon"
			        android:layout_margin="@dimen/layout_spacing_small"
			        		        
			        android:layout_width="28dp"
			        android:layout_height="28dp"
			        
			        android:layout_gravity="center"       
			        />
			     	
			    <!-- Password text input -->
			    <EditText
			        android:id="@+id/login_password"
			        android:background="@drawable/login_text_field"
			        android:layout_margin="@dimen/layout_spacing_small"
			        
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/input_type_height"
			        
			        android:ems="10"
			        android:inputType="textPassword"		        
			        android:paddingLeft="10dp"
			        android:paddingRight="10dp" />
		    
		    </LinearLayout>
	
		    <!-- Log In BUTTON -->
		    <Button
		        android:id="@+id/login_button"
		        android:background="@color/primaryTwo"
		        android:textColor="@color/whiteColor"
		        android:layout_margin="@dimen/layout_spacing_small"
		        
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/input_type_height"
		        
		        android:text="Log In"
		        />
		    <!-- Register BUTTON -->
		    <Button
		        android:id="@+id/register_button"
		        android:background="@drawable/register_button_color"
		        android:textColor="@color/whiteColor"
		        android:layout_margin="@dimen/layout_spacing_small"
		        
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/input_type_height"
		        
		        android:text="Or Register"
		        />
    
	</LinearLayout>
	<!-- END of main content layout -->
	</ScrollView>
	<!-- END of main content scroll view -->
	
	
</LinearLayout>


