<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_bg"
    android:padding="5dp">


    <com.mateyinc.marko.matey.activity.rounded_image_view.RoundedImageView
        android:id="@+id/ivNotifProfilePic"
        android:layout_width="@dimen/notif_profile_dimen"
        android:layout_height="@dimen/notif_profile_dimen"
        android:src="@drawable/profile_bg"
        app:riv_border_width="0dp"
        app:riv_oval="true"
        app:riv_border_color="@color/profile_pic_border"
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNotifText"
            android:text="has commented"
            android:textSize="@dimen/notif_textSize_large"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNotifTime"
            android:layout_gravity="right"
            android:textSize="@dimen/notif_textSize_small" />
    </LinearLayout>

</LinearLayout>