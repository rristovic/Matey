<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mateyinc.marko.matey.activity.AddFriendsActivity">


    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:text="@string/finish_btn_label" />

    <Button
        android:id="@+id/btnAddAllFriends"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/btnFinish"
        android:text="@string/add_all_btn_label" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSuggestedFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnAddAllFriends"
        app:layoutManager="LinearLayoutManager" />

</RelativeLayout>
