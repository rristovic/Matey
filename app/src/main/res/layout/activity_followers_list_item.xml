<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="horizontal">

    <com.mateyinc.marko.matey.activity.rounded_image_view.RoundedImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="@dimen/bulletin_pic_height"
        android:layout_height="@dimen/bulletin_pic_height"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:padding="@dimen/bulletin_pic_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/empty_photo"
        app:riv_border_color="@color/profile_pic_border"
        app:riv_border_width="0dp"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="TextView" />

    <ToggleButton xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/tBtnSailWith"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/followers_button_size"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_btn"
        android:checked="false"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="@dimen/followers_button_padding"
        android:paddingTop="@dimen/followers_button_padding"
        android:textColor="@color/profile_btn"
        android:textOff="@string/sail_with_label"
        android:textOn="@string/sailing_with_label"
        android:textSize="@dimen/followers_button_textSize" />
</LinearLayout>