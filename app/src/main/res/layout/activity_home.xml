<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.mateyinc.marko.matey.activity.home.HomeActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp">


        <ImageView
            android:layout_width="@dimen/toolbar_mateyLogo_size"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/actionBar_icon_margin"
            android:layout_marginRight="@dimen/actionBar_icon_margin"
            android:background="@color/bg_transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/matey_logo_text"
            android:id="@+id/ivHomeLogo"
            android:paddingTop="8dp"
            android:tint="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <ImageButton
            android:id="@+id/ibProfile"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="14dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile_icon"
            android:background="@drawable/actionbar_icon_bg" />

        <ImageButton
            android:id="@+id/ibSearch"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/actionbar_icon_bg"
            android:padding="@dimen/actionBar_icon_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_search_black_24dp" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/homeContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navBar_size"
        android:layout_gravity="center_horizontal"
        android:background="@color/navBar"
        android:elevation="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibHome"
            style="@style/NavBarButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_transparent"
            android:src="@android:drawable/ic_menu_compass"
            android:tint="@color/light_gray" />

        <ImageButton
            android:id="@+id/ibGroups"
            style="@style/NavBarButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_transparent"
            android:src="@android:drawable/stat_notify_error"
            android:tint="@color/light_gray" />

        <ImageButton
            android:id="@+id/ibMessages"
            style="@style/NavBarButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_transparent"
            android:src="@android:drawable/stat_notify_chat"
            android:tint="@color/light_gray" />

        <ImageButton
            android:id="@+id/ibNotifications"
            style="@style/NavBarButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_transparent"
            android:src="@drawable/ic_people"
            android:tint="@color/light_gray" />

        <ImageButton
            android:id="@+id/ibMenu"
            style="@style/NavBarButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bg_transparent"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:tint="@color/light_gray" />
    </LinearLayout>
</LinearLayout>
