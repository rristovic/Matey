<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">

    <com.mateyinc.marko.matey.activity.rounded_image_view.RoundedImageView
        android:id="@+id/ivPicture"
        android:layout_width="@dimen/group_listItem_size"
        android:layout_height="@dimen/group_listItem_size"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="@dimen/group_listItem_text_sideMargin"
        android:layout_marginStart="@dimen/group_listItem_text_sideMargin"
        android:padding="@dimen/group_listItem_picPadding"
        android:scaleType="centerCrop"
        android:src="@color/gray"
        app:riv_border_color="@color/profile_pic_border"

        app:riv_border_width="0dp"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/group_listItem_text_sideMargin"
        android:layout_marginStart="@dimen/group_listItem_text_sideMargin"
        android:layout_marginTop="@dimen/group_listItem_name_topMargin"
        android:layout_toEndOf="@id/ivPicture"
        android:layout_toRightOf="@id/ivPicture"
        android:text="Group name 2017"
        android:textSize="@dimen/group_listItem_textSize_name" />

    <TextView
        android:id="@+id/tvGroupStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGroupName"
        android:layout_marginLeft="@dimen/group_listItem_text_sideMargin"
        android:layout_marginStart="@dimen/group_listItem_text_sideMargin"
        android:layout_toEndOf="@id/ivPicture"
        android:layout_toRightOf="@id/ivPicture"
        android:text="group stats"
        android:textSize="@dimen/group_listItem_textSize_stats" />


</RelativeLayout>