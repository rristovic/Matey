<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <!-- Used in main activity -->
    <style name="MainActivityStyle" parent="AppTheme">
        <item name="android:windowBackground">@drawable/loading_screen</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/bg_transparent</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">@color/login_btn_white</item>
    </style>

    <style name="EditTextStyleProfile" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/bg_transparent</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">@color/login_btn_white</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>


    <style name="ButtonLogin">
        <item name="android:paddingLeft">@dimen/login_btn_side_padding</item>
        <item name="android:paddingRight">@dimen/login_btn_side_padding</item>
        <item name="android:paddingTop">@dimen/login_btn_top_padding</item>
        <item name="android:paddingBottom">@dimen/login_btn_top_padding</item>
        <item name="android:textSize">@dimen/login_btn_text_size</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Navigation bar styles -->
    <style name="NavBarButtons">
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Tabs bar styles -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/bg_transparent</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blackTransparent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- PopuP Enter Exit Animation -->
    <style name="PopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <!-- Search view style -->
    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@color/white</item>
        <item name="queryBackground">@color/white</item>
    </style>


</resources>
