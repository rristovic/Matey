<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>

    </style>


    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/bg_transparent</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">@color/login_btn_white</item>
    </style>

    <style name="EditTextStyleProfile" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/bg_transparent</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">@color/login_btn_white</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>



    <style name="ButtonLogin">
        <item name="android:paddingLeft">@dimen/login_btn_side_padding</item>
        <item name="android:paddingRight">@dimen/login_btn_side_padding</item>
        <item name="android:paddingTop">@dimen/login_btn_top_padding</item>
        <item name="android:paddingBottom">@dimen/login_btn_top_padding</item>
        <item name="android:textSize">@dimen/login_btn_text_size</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavBarButtons">
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


</resources>
